<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#fcfcfc">

  <!--  <include layout="@layout/toolbar"
        android:id="@+id/toolbar"/>-->

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appBar"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <android.support.design.widget.CollapsingToolbarLayout
            android:id="@+id/collacsingBar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_scrollFlags="scroll|exitUntilCollapsed"
            app:contentScrim="?attr/colorPrimary"
            app:title="Voice pay"
            app:expandedTitleMarginStart="48dp"
            app:expandedTitleMarginEnd="64dp"
            android:background="@drawable/bginfo">

                <android.support.v7.widget.Toolbar
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    android:id="@+id/toolbar"
                    app:layout_collapseMode="pin"
                    app:popupTheme="@style/Theme.AppCompat.Light"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/UserName"
                android:layout_margin="20sp"
                android:layout_gravity="right"
                android:text="Welcome XYZZ ..."
                android:fontFamily="sans-serif"
                android:textColor="#FFF"
                android:textSize="25sp"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:background="@drawable/bgroundbtn"
                android:src="@drawable/lifecycle"
                android:scaleX="0.5"
                android:scaleY="0.5"/>

            <ImageButton
                android:layout_width="83dp"
                android:layout_height="82dp"
                android:layout_gravity="center"
                android:background="@drawable/bgroundbtn"
                android:src="@drawable/wa" />


        </android.support.design.widget.CollapsingToolbarLayout>


    </android.support.design.widget.AppBarLayout>


<android.support.v4.widget.NestedScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/relativeLayout1"
            android:layout_marginTop="10dp"
            android:layout_margin="10dp"
            >


            <LinearLayout
                android:id="@+id/l1"
                android:layout_marginLeft="25sp"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageButton
                    android:id="@+id/moneytransfer"
                    android:layout_width="60dp"
                    android:layout_height="59dp"
                    android:layout_margin="12sp"
                    android:elevation="30dp"
                    android:background="@drawable/bgroundbtn"
                    android:src="@drawable/moneytransfer" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Transfer"
                    android:layout_marginLeft="17sp"
                    android:textAlignment="center"
                    android:textColor="#000"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/l2"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_toRightOf="@+id/l1">


                <ImageButton
                    android:id="@+id/request"
                    android:layout_width="60dp"
                    android:layout_height="59dp"
                    android:elevation="30dp"
                    android:layout_margin="12sp"
                    android:layout_marginTop="10sp"
                    android:background="@drawable/bgroundbtn"
                    android:src="@drawable/moneybag" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="17sp"
                    android:text="Request"
                    android:textAlignment="center"
                    android:textColor="#000"/>


            </LinearLayout>

            <LinearLayout
                android:id="@+id/l3"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_toRightOf="@+id/l2">


                <ImageButton
                    android:id="@+id/transactions"
                    android:layout_width="60dp"
                    android:layout_height="59dp"
                    android:layout_margin="12sp"
                    android:layout_marginTop="10sp"
                    android:elevation="30dp"
                    android:background="@drawable/bgroundbtn"
                    android:src="@drawable/transaction"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="17sp"
                    android:text="Transaction"
                    android:textAlignment="center"
                    android:textColor="#000"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/l4"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_toRightOf="@+id/l3">
                <ImageButton
                    android:id="@+id/creditcard"
                    android:layout_width="60dp"
                    android:layout_height="59dp"
                    android:layout_margin="12sp"
                    android:elevation="30dp"
                    android:background="@drawable/bgroundbtn"
                    android:layout_marginTop="10sp"
                    android:src="@drawable/creditcard"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="17sp"
                    android:text="Card"
                    android:textAlignment="center"
                    android:textColor="#000"/>
            </LinearLayout>





    </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/relativeLayout2"
            android:layout_marginTop="10dp"
            android:layout_margin="10dp"
            >


            <LinearLayout
                android:id="@+id/l5"
                android:layout_marginLeft="25sp"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageButton
                    android:id="@+id/balance"
                    android:layout_width="60dp"
                    android:layout_height="59dp"
                    android:layout_margin="12sp"
                    android:elevation="30dp"
                    android:background="@drawable/bgroundbtn"
                    android:src="@drawable/balance" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Check\n Balance"
                    android:layout_marginLeft="17sp"
                    android:textAlignment="center"
                    android:textColor="#000"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/l6"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_toRightOf="@+id/l5">


                <ImageButton
                    android:id="@+id/addaccount"
                    android:layout_width="60dp"
                    android:layout_height="59dp"
                    android:elevation="30dp"
                    android:layout_margin="12sp"
                    android:layout_marginTop="10sp"
                    android:background="@drawable/bgroundbtn"
                    android:src="@drawable/account" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="17sp"
                    android:text="Add new\nbank account"
                    android:textAlignment="center"
                    android:textColor="#000"/>


            </LinearLayout>

            <LinearLayout
                android:id="@+id/l7"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_toRightOf="@+id/l6">


                <ImageButton
                    android:id="@+id/offers"
                    android:layout_width="60dp"
                    android:layout_height="59dp"
                    android:layout_margin="12sp"
                    android:layout_marginTop="10sp"
                    android:elevation="30dp"
                    android:background="@drawable/bgroundbtn"
                    android:src="@drawable/shopping"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="17sp"
                    android:text="Offers"
                    android:textAlignment="center"
                    android:textColor="#000"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/l8"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_toRightOf="@+id/l7">
                <ImageButton
                    android:id="@+id/scanqr"
                    android:layout_width="60dp"
                    android:layout_height="59dp"
                    android:layout_margin="12sp"
                    android:elevation="30dp"
                    android:background="@drawable/bgroundbtn"
                    android:layout_marginTop="10sp"
                    android:src="@drawable/barcode"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="17sp"
                    android:text="Scan QR\n or UPI"
                    android:textAlignment="center"
                    android:textColor="#000"/>
            </LinearLayout>





        </RelativeLayout>


<!--        -->
<!--        <View-->
<!--            android:layout_width="wrap_content"-->
<!--            android:layout_height="300dp"-->
<!--            android:layout_marginLeft="24dp"-->
<!--            android:layout_marginRight="24dp"/>-->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:layout_marginLeft="18dp"
            android:text="Recent Transactions"/>
        <LinearLayout
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:layout_width="match_parent"
            android:background="@drawable/bgcard"
            android:layout_height="wrap_content"

            android:orientation="vertical"
            android:padding="16dp">


            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="75dp"

                android:background="@drawable/bground"
                android:layout_margin="3sp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Recent Transacions"
                    android:fontFamily="sans-serif"
                    android:textSize="16sp"
                    android:textColor="#000"
                    android:gravity="center_vertical|start"
                    android:padding="15dp"
                    />
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="75dp"

                android:background="@drawable/bground"
                android:layout_margin="3sp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Con"
                    android:fontFamily="cursive"
                    android:textColor="@color/colorPrimaryDark"
                    android:gravity="center_vertical|start"
                    android:padding="15dp"
                    />
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="75dp"

                android:background="@drawable/bground"
                android:layout_margin="3sp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Con"
                    android:fontFamily="cursive"
                    android:textColor="@color/colorPrimaryDark"
                    android:gravity="center_vertical|start"
                    android:padding="15dp"
                    />
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:layout_margin="3sp"

                android:background="@drawable/bground">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fontFamily="cursive"
                    android:textColor="@color/colorPrimaryDark"
                    android:text="Con"
                    android:gravity="center_vertical|start"
                    android:padding="15dp"
                    />
            </android.support.v7.widget.CardView>

        </LinearLayout>

        <Button
            android:id="@+id/popto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Check offers"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="15dp"
            android:layout_gravity="center"
            android:background="#FF2196F3"/>

        <com.luseen.spacenavigation.SpaceNavigationView
            android:id="@+id/space"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="bottom"
            app:active_item_color="#FF121216"
            app:centre_button_color="#FF3F4996"
            app:inactive_item_color="@color/white"
            app:active_centre_button_icon_color="@color/white"
            app:inactive_centre_button_icon_color="@color/white"
            app:active_centre_button_background_color="#f44336"
            app:space_background_color="#FF2196F3"
            app:centre_button_icon="@drawable/ic_keyboard_voice_black_24dp"
            app:space_item_icon_size="@dimen/space_item_icon_default_size"
            app:space_item_icon_only_size="@dimen/space_item_icon_only_size"
            app:space_item_text_size="@dimen/space_item_text_default_size" />

    </LinearLayout>
</android.support.v4.widget.NestedScrollView>


</android.support.design.widget.CoordinatorLayout>